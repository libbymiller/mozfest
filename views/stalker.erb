  <div id="message">foo</div>
  <script type="text/javascript"
        src="http://localhost:9292/faye/client.js"></script>
  <script>
      //faye stuff
      var client = new Faye.Client("http://localhost:9292/faye");
      var subscription = client.subscribe('/foo', function(message) {
           console.log(message);
           var old_data = document.getElementById("message").innerHTML;
           var img_str = message.image;
           var friends = message.friends;
           document.getElementById("message").innerHTML = "<img src='"+img_str+"' width=\"300px\"/> <p>"+message.id+": power "+message.power+"<br />"+friends.join(" | ")+"</p>\n<br/>"+old_data;
      });

  </script>
